{
    "name": "fval/springy",
    "description": "Springy",
    "license": "MIT",
    "type": "project",
    "config": {
        "vendor-dir": "www/system/vendor"
    },
    "extra": {
        "installer-paths": {
            "www/system/vendor/{$name}": ["vendor/package"]
        },
        "post-install": {
            "components/jquery": {
                "target": "www/assets/jquery",
                "files": "jquery.min.js"
            },
            "twbs/bootstrap": {
                "target": "www/assets/bootstrap",
                "files": [
                    "dist/css/*",
                    "dist/js/*",
                    "dist/fonts/*"
                ]
            }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "mockery/mockery": "~0.9"
    },
    "require": {
        "php": ">=5.6.0",

        "smarty/smarty": "*",
        "twig/twig": "*",
        "ircmaxell/password-compat": "*",
        "matthiasmullie/minify": "*",
        "sendgrid/sendgrid": "~5.0",
        "phpmailer/phpmailer": "~5.2",

        "components/jquery": "~3.1",
        "twbs/bootstrap": "3.3.*"
    },
    "change-this-to-scripts": {
        "post-install-cmd": "php -f components.php",
        "post-update-cmd": "php -f components.php"
    },
    "repositories": []
}
